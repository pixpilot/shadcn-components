{
  "name": "@pixpilot/shadcn-ui",
  "type": "module",
  "version": "0.57.2",
  "packageManager": "pnpm@10.25.0",
  "description": "Custom UI components and utilities built with shadcn/ui.",
  "author": "m.doaie <m.doaie@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixpilot/shadcn-components.git",
    "directory": "packages/shadcn-ui"
  },
  "exports": "./src/index.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.cjs"
      }
    },
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "scripts": {
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "clean": "git clean -xdf .cache .turbo dist",
    "clean:all": "git clean -xdf .cache .turbo dist node_modules",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "test": "vitest --run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@ebay/nice-modal-react": "^1.2.13",
    "@iconify-json/fa": "catalog:prod",
    "@iconify-json/mdi": "catalog:prod",
    "@iconify/react": "catalog:prod",
    "@pixpilot/hash": "catalog:prod",
    "@pixpilot/shadcn": "workspace:*",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-virtual": "^3.13.18",
    "@tiptap/core": "^3.16.0",
    "@tiptap/extension-link": "^3.16.0",
    "@tiptap/extension-placeholder": "^3.17.1",
    "@tiptap/extension-text-align": "^3.16.0",
    "@tiptap/react": "^3.16.0",
    "@tiptap/starter-kit": "^3.16.0",
    "class-variance-authority": "catalog:prod",
    "lucide-react": "catalog:prod",
    "next-themes": "catalog:prod",
    "pretty-bytes": "^7.1.0",
    "react-responsive": "^10.0.1",
    "sonner": "2.0.7"
  },
  "devDependencies": {
    "@internal/eslint-config": "workspace:*",
    "@internal/hooks": "workspace:*",
    "@internal/prettier-config": "workspace:*",
    "@internal/tsconfig": "workspace:*",
    "@internal/tsdown-config": "workspace:*",
    "@internal/vitest-config": "workspace:*",
    "@storybook/react": "catalog:dev",
    "@testing-library/react": "catalog:dev",
    "@types/node": "catalog:dev",
    "@types/react": "catalog:dev",
    "eslint": "catalog:dev",
    "jsdom": "catalog:dev",
    "react": "catalog:prod",
    "react-dom": "catalog:prod",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev"
  },
  "prettier": "@internal/prettier-config"
}
